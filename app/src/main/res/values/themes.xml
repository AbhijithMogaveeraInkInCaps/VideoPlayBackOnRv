<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VideoPlayBackOnRv" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="VideoItem"/>

    <style name="VideoItem.Indicator">
        <item name="android:layout_width">@dimen/video_item_indicator_size</item>
        <item name="android:layout_height">@dimen/video_item_indicator_size</item>
        <item name="android:layout_margin">@dimen/video_item_indicator_margin</item>
    </style>

    <style name="VideoItem.Indicator.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/video_item_indicator_size</item>
        <item name="android:layout_height">@dimen/video_item_indicator_size</item>
        <item name="android:layout_margin">@dimen/video_item_indicator_margin</item>
    </style>

</resources>